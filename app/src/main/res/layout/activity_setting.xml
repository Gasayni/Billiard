<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SettingActivity">

    <Button
        android:id="@+id/btnTables"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="256dp"
        android:background="@drawable/btn_style_1"
        android:text="Столы"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnEmployee"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnTables"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_1"
        android:text="@string/employee"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnEmployee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_1"
        android:text="@string/share"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnShare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_style_6"
        android:text="@string/back"
        android:textSize="24dp" />





</RelativeLayout>